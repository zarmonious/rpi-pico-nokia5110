void setup() {
  delay(1000);
  pinMode(22, OUTPUT);
  digitalWrite(22, LOW); //LOW = light active
  
  mylcd.LCDInit(inverse, contrast, bias); // init  the LCD
  mylcd.LCDClear(0x00); // Clear whole screen
  mylcd.LCDFont(FontNumber); // Set the font
  mylcd.LCDgotoXY(0, 0); // (go to (X , Y) (0-84 columns, 0-5 blocks) top left corner
  mylcd.LCDString("Hello!"); //print
  delay(1000);
}

void loop() {
  mylcd.LCDClear(0x00);
  mylcd.LCDCustomChar(raspbitmap, sizeof(raspbitmap) / sizeof(unsigned char), 0x00, true);
  delay(4000);
  mylcd.LCDCustomChar(dbpbitmap, sizeof(dbpbitmap) / sizeof(unsigned char), 0x00, true);
  delay(2000);
  mylcd.LCDClear(0x00);
}
